# Database (if using NextAuth with Prisma in frontend)
DATABASE_URL="postgresql://username:password@localhost:5432/fixa2an"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Email (frontend usage is minimal; backend should own email creds)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@fixa2an.se"

# AWS S3 (prefer configuring in backend)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-north-1"
AWS_S3_BUCKET="fixa2an-uploads"

# Klarna (prefer configuring in backend)
KLARNA_USERNAME="your-klarna-username"
KLARNA_PASSWORD="your-klarna-password"
KLARNA_TEST_MODE=true

# Google Maps
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# App Settings
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
# Backend API URL for proxying frontend requests
NEXT_PUBLIC_API_URL="http://localhost:4000"

